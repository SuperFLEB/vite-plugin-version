{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
